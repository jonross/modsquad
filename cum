# vim:ft=python

import sys
import tavolino as tl

(columns, rest) = tl.getargs(tl.columns())

rows = list(tl.getrows())
if not rows:
    sys.exit(0)

offset = 0
for index in range(0, len(rows[0])):
    if index in columns or (rest is not None and index >= rest):
        cum = 0
        for row in rows:
            cum += tl.convert(row[index + offset])
            row.insert(index + offset + 1, cum)
        offset += 1

for row in rows:
    tl.output(row)

