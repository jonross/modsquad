
. ~/bin/tavolino/columns.sh

jsonx() {
    python2.7 -c 'if True:
        import json, re, sys
        data = json.loads(sys.stdin.read())
        key = "'"$1"'"
        for item in key.split(","):
            if re.match(r"^\d+$", item):
                data = data[int(item)]
            else:
                data = data[item]
        if type(data) == list:
            for item in data:
                print item
        else:
            print data
    '
}

